FROM ubuntu:22.04

# Avoid prompts
ENV DEBIAN_FRONTEND=noninteractive

# Install core build tools and dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    cmake \
    python3 \
    python3-dev \
    python3-pip \
    libboost-graph-dev \
    libtbb-dev \
    git \
    && rm -rf /var/lib/apt/lists/*

# Install python-specific build dependencies
RUN pip3 install --upgrade pip
RUN pip3 install pybind11 numpy networkx pyverilog

# Set up working directory
WORKDIR /app

# The app source will be mounted here
ENV PYTHONPATH=/app

CMD ["bash"]
